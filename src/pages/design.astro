---
import Layout from "@/components/Layout.astro";
---

<style>
  /* --- DESIGN PAGE SHOWCASE STYLES --- */

  /* FORM LAYOUT */
  .forms form {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    max-width: 600px;
  }

  /* COMPONENT GRID */
  .component-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
  }

  /* COLOR PALETTE */
  .palette-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: var(--space-lg);
  }

  .swatch {
    aspect-ratio: 1 / 1;
    border-radius: 16px;
    padding: var(--space-md);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    transition: transform var(--transition-duration) var(--ease-smooth);
    border: 1px solid var(--surface-border);
  }

  .swatch:hover {
    transform: translateY(-10px) scale(1.02);
    z-index: 2;
  }

  .swatch-label {
    font-weight: 900;
    text-transform: uppercase;
    font-size: 1.25rem;
    display: block;
  }

  .swatch-hex {
    opacity: 0.7;
  }

  .pink {
    background: var(--primary-pink);
    color: var(--space-black);
  }
  .yellow {
    background: var(--primary-yellow);
    color: var(--space-black);
  }
  .green {
    background: var(--accent-green);
    color: var(--space-black);
  }
  .red {
    background: var(--accent-red);
    color: var(--space-black);
  }
  .orange {
    background: var(--accent-orange);
    color: var(--space-black);
  }
  .purple {
    background: var(--accent-purple);
    color: var(--space-black);
  }
  .blue {
    background: var(--accent-blue);
    color: var(--space-black);
  }
  .cyan {
    background: var(--primary-cyan);
    color: var(--space-black);
  }
  .black {
    background: var(--space-black);
    color: var(--starlight);
    border: 1px solid var(--space-gray);
  }
  .gray {
    background: var(--space-gray);
    color: var(--starlight);
  }
  .empty {
    display: none;
    border: none;
    background: transparent;
    pointer-events: none;
  }
  .empty:hover {
    transform: none;
  }

  .gradient-text-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .gradient-text-grid h1 {
    font-size: 3rem;
    line-height: 1.1;
    margin: 0;
    width: fit-content;
  }

  /* Show empty swatch on desktop (multi-column layout) */
  @media (min-width: var(--breakpoint-md)) {
    .empty {
      display: flex;
    }
  }

  /* TYPOGRAPHY DEMO */
  .type-scale {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    width: 100%;
  }

  .type-row {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: var(--space-xs);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--surface-border);
  }

  .type-row:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .type-row h1,
  .type-row h2,
  .type-row h3,
  .type-row p {
    margin: 0;
    color: var(--starlight);
  }

  @media (min-width: var(--breakpoint-md)) {
    .type-row {
      grid-template-columns: 120px 1fr;
      gap: var(--space-lg);
    }
  }

  /* ANIMATIONS DEMO */
  .anim-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
  }

  .anim-box {
    background: var(--surface-bg-glass);
    border: 1px solid var(--space-gray);
    border-radius: 16px;
    height: 250px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    cursor: pointer;
    overflow: hidden;
  }

  .anim-object {
    width: 60px;
    height: 60px;
    background: var(--primary-yellow);
    border-radius: 8px;
    transition: all var(--transition-duration) var(--ease-smooth);
  }

  .hover-scale:hover .anim-object {
    transform: scale(1.5) rotate(15deg);
    background: var(--primary-pink);
    box-shadow: 0 0 30px var(--primary-pink);
  }

  .hover-slide:hover .anim-object {
    transform: translateX(50px);
    background: var(--primary-cyan);
    border-radius: 50%;
  }

  .infinite-pulse .anim-object {
    animation: pulse 2s infinite var(--ease-smooth);
    background: var(--primary-pink);
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
      box-shadow: 0 0 20px var(--primary-pink);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* GRADIENTS DEMO */
  .gradient-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .gradient-box {
    width: 100%;
    height: 300px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--surface-border-bright);
    background-color: var(--space-gray); /* Fallback */
  }

  .gradient-box.vertical {
    background-image: linear-gradient(
      to bottom,
      var(--primary-pink),
      var(--primary-yellow),
      var(--primary-cyan)
    );
  }

  .gradient-box.horizontal {
    background-image: linear-gradient(
      to right,
      var(--primary-pink),
      var(--primary-yellow),
      var(--primary-cyan)
    );
  }

  .gradient-box .label {
    background: var(--overlay-dark);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 8px;
    color: var(--starlight);
    font-weight: bold;
    backdrop-filter: blur(5px);
  }
</style>

<Layout>
  <main class="brochure">
    <!-- HERO SECTION -->
    <section class="surface hero">
      <header class="content">
        <h1>Design System</h1>
        <p class="subtitle">Musical Universe Factory</p>
      </header>
    </section>

    <!-- COLOR PALETTE -->
    <section class="surface colors">
      <div class="content">
        <h2 class="section-heading">Color Palette</h2>
        <p class="desc">
          A high-contrast, neon-infused 80s synthwave palette designed for deep
          space visibility.
        </p>

        <div class="palette-grid stagger-in">
          <div class="swatch pink">
            <span class="swatch-label">Primary Pink</span>
            <span class="swatch-hex">oklch(65% 0.26 350)</span>
          </div>
          <div class="swatch yellow">
            <span class="swatch-label">Primary Yellow</span>
            <span class="swatch-hex">oklch(95% 0.20 105)</span>
          </div>
          <div class="swatch cyan">
            <span class="swatch-label">Primary Cyan</span>
            <span class="swatch-hex">oklch(80% 0.18 200)</span>
          </div>
        </div>

        <div class="palette-grid neutrals stagger-in">
          <div class="swatch black">
            <span class="swatch-label">Space Black</span>
            <span class="swatch-hex">oklch(0% 0 0)</span>
          </div>
          <div class="swatch gray">
            <span class="swatch-label">Space Gray</span>
            <span class="swatch-hex">oklch(26.85% 0 0)</span>
          </div>
          <div class="swatch empty"></div>
        </div>

        <div class="palette-grid accents stagger-in">
          <div class="swatch green">
            <span class="swatch-label">Accent Green</span>
            <span class="swatch-hex">oklch(88% 0.20 150)</span>
          </div>
          <div class="swatch red">
            <span class="swatch-label">Accent Red</span>
            <span class="swatch-hex">oklch(78% 0.20 25)</span>
          </div>
          <div class="swatch orange">
            <span class="swatch-label">Accent Orange</span>
            <span class="swatch-hex">oklch(84% 0.18 65)</span>
          </div>
          <div class="swatch blue">
            <span class="swatch-label">Accent Blue</span>
            <span class="swatch-hex">oklch(88% 0.16 240)</span>
          </div>
          <div class="swatch purple">
            <span class="swatch-label">Accent Purple</span>
            <span class="swatch-hex">oklch(78% 0.20 290)</span>
          </div>
        </div>
      </div>
    </section>

    <!-- SURFACE GRADIENTS -->
    <section class="surface gradients">
      <div class="content">
        <h2 class="section-heading">Surface Gradients</h2>
        <p class="desc">Signature brand gradients for backgrounds.</p>

        <div class="gradient-grid stagger-in">
          <div class="gradient-box vertical">
            <span class="label">Top to Bottom</span>
          </div>
          <div class="gradient-box horizontal">
            <span class="label">Left to Right</span>
          </div>
        </div>
      </div>
    </section>

    <!-- TEXT GRADIENTS -->
    <section class="surface text-gradients">
      <div class="content">
        <h2 class="section-heading">Text Gradients</h2>
        <p class="desc">High-impact typographic treatments.</p>

        <div class="gradient-text-grid">
          <h1 class="gradient-full-spectrum">Full Spectrum Rainbow</h1>
          <h1 class="gradient-full-spectrum-r">Full Spectrum Reverse</h1>
          <h1 class="gradient-pink-white">Pink to White</h1>
          <h1 class="gradient-white-pink">White to Pink</h1>
          <h1 class="gradient-yellow-white">Yellow to White</h1>
          <h1 class="gradient-white-yellow">White to Yellow</h1>
          <h1 class="gradient-cyan-white">Cyan to White</h1>
          <h1 class="gradient-white-cyan">White to Cyan</h1>
          <h1 class="gradient-pink-yellow">Pink to Yellow</h1>
          <h1 class="gradient-yellow-pink">Yellow to Pink</h1>
          <h1 class="gradient-pink-cyan">Pink to Cyan</h1>
          <h1 class="gradient-cyan-pink">Cyan to Pink</h1>
          <h1 class="gradient-yellow-cyan">Yellow to Cyan</h1>
          <h1 class="gradient-cyan-yellow">Cyan to Yellow</h1>
        </div>
      </div>
    </section>

    <!-- TYPOGRAPHY -->
    <section class="surface typography">
      <div class="content">
        <h2 class="section-heading">Typography</h2>
        <p class="desc">
          Powered by <a
            href="https://vercel.com/font"
            target="_blank"
            rel="noopener noreferrer"
            ><span class="highlight">Geist Variable</span></a
          >. Precision engineered for legibility.
        </p>

        <div class="type-scale">
          <div class="type-row">
            <span class="label text-green">Headline 1</span>
            <h1>The Quick Brown Fox</h1>
          </div>
          <div class="type-row">
            <span class="label text-red">Headline 2</span>
            <h2>Jumps Over The</h2>
          </div>
          <div class="type-row">
            <span class="label text-orange">Headline 3</span>
            <h3>Lazy Dog</h3>
          </div>
          <div class="type-row">
            <span class="label text-purple">Body</span>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
              eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut
              enim ad minim veniam, quis nostrud exercitation ullamco laboris
              nisi ut aliquip ex ea commodo consequat.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- ANIMATIONS -->
    <section class="surface animations">
      <div class="content">
        <h2 class="section-heading">Motion & Timing</h2>
        <p class="desc">
          Fluid transitions powered by <code>--ease-smooth</code>.
        </p>

        <div class="anim-grid stagger-in">
          <div class="anim-box hover-scale">
            <span class="anim-label">Hover Scale</span>
            <div class="anim-object"></div>
          </div>

          <div class="anim-box hover-slide">
            <span class="anim-label">Hover Slide</span>
            <div class="anim-object"></div>
          </div>

          <div class="anim-box infinite-pulse">
            <span class="anim-label">Infinite Pulse</span>
            <div class="anim-object"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- UI ELEMENTS -->
    <section class="surface elements">
      <div class="content">
        <h2 class="section-heading">Interface Elements</h2>
        <p class="desc">
          Interactive components with smooth states and high affordance.
        </p>

        <div class="component-grid stagger-in">
          <div class="glass">
            <h3>Glass Card</h3>
            <p>
              Background blur with a subtle border. Perfect for floating
              content.
            </p>
            <button class="btn primary">Primary Action</button>
          </div>

          <div class="solid">
            <h3>Solid Card</h3>
            <p>High contrast background for primary information.</p>
            <button class="btn secondary">Secondary Action</button>
          </div>

          <div class="outline">
            <h3>Outline Card</h3>
            <p>Minimalist container for secondary details.</p>
            <a href="#">Inline Link Style</a>
          </div>
        </div>
      </div>
    </section>

    <!-- FORMS -->
    <section class="surface forms">
      <div class="content">
        <h2 class="section-heading">Forms</h2>
        <p class="desc">
          High-contrast inputs with bold borders and clear validation states.
        </p>

        <form class="stagger-in">
          <!-- Text Input -->
          <div class="form-field">
            <label for="text-input">Text Input</label>
            <input
              type="text"
              id="text-input"
              placeholder="Enter your name"
            />
          </div>

          <!-- Email Input -->
          <div class="form-field">
            <label for="email-input">Email</label>
            <input
              type="email"
              id="email-input"
              placeholder="your@email.com"
            />
          </div>

          <!-- Textarea -->
          <div class="form-field">
            <label for="message-input">Message</label>
            <textarea
              id="message-input"
              placeholder="Tell us something..."
            ></textarea>
          </div>

          <!-- Select Dropdown -->
          <div class="form-field">
            <label for="select-input">Select Option</label>
            <select id="select-input">
              <option value="">Choose one...</option>
              <option value="1">Option One</option>
              <option value="2">Option Two</option>
              <option value="3">Option Three</option>
            </select>
          </div>

          <!-- Checkbox -->
          <div class="form-field inline">
            <input type="checkbox" id="checkbox-input" />
            <label for="checkbox-input">I agree to the terms</label>
          </div>

          <!-- Radio Buttons -->
          <div class="form-field">
            <label>Choose Format</label>
            <div class="form-field inline">
              <input type="radio" id="radio-flac" name="format" checked />
              <label for="radio-flac">FLAC</label>
            </div>
            <div class="form-field inline">
              <input type="radio" id="radio-zip" name="format" />
              <label for="radio-zip">ZIP</label>
            </div>
          </div>

          <!-- Error State -->
          <div class="form-field error">
            <label for="error-input">Error State</label>
            <input
              type="email"
              id="error-input"
              value="invalid-email"
            />
            <span class="form-message error">Invalid email format</span>
          </div>

          <!-- Success State -->
          <div class="form-field success">
            <label for="success-input">Success State</label>
            <input
              type="email"
              id="success-input"
              value="valid@email.com"
            />
            <span class="form-message success">Email verified</span>
          </div>

          <!-- Disabled State -->
          <div class="form-field">
            <label for="disabled-input">Disabled Input</label>
            <input
              type="text"
              id="disabled-input"
              value="Cannot edit this"
              disabled
            />
          </div>

          <button type="submit" class="btn retro">Submit Form</button>
        </form>
      </div>
    </section>
  </main>
</Layout>
