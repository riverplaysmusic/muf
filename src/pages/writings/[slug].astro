---
import Layout from "@/components/Layout.astro";
import { readdir, readFile, stat } from "node:fs/promises";
import { join } from "node:path";

export async function getStaticPaths() {
  const writingsDir = join(process.cwd(), "public", "writings");
  const items = await readdir(writingsDir);

  const paths = [];

  for (const item of items) {
    const itemPath = join(writingsDir, item);
    const itemStat = await stat(itemPath);

    if (itemStat.isDirectory()) {
      // Check if writing.txt exists
      try {
        await readFile(join(itemPath, "writing.txt"), "utf-8");
        paths.push({ params: { slug: item } });
      } catch {
        // Skip folders without writing.txt
      }
    }
  }

  return paths;
}

const { slug } = Astro.params;

// Read writing folder
const writingsDir = join(process.cwd(), "public", "writings");
const writingPath = join(writingsDir, slug);
const writingFilePath = join(writingPath, "writing.txt");

// Read and parse writing.txt
const content = await readFile(writingFilePath, "utf-8");
const frontmatterMatch = content.match(/^---\n([\s\S]*?)\n---/);
const frontmatter = frontmatterMatch?.[1] || "";
const title = frontmatter.match(/title:\s*(.+)/)?.[1] || "Untitled";
const author = frontmatter.match(/author:\s*(.+)/)?.[1] || "Musical Universe Factory";
const date = frontmatter.match(/date:\s*(.+)/)?.[1] || "";
const category = frontmatter.match(/category:\s*(.+)/)?.[1] || "writing";
const priceCents = parseInt(frontmatter.match(/price_cents:\s*(\d+)/)?.[1] || "0");

// Parse tags
const tagsMatch = frontmatter.match(/tags:\s*\n([\s\S]*?)(?=\n\w+:|$)/);
let tags: string[] = [];
if (tagsMatch) {
  tags = tagsMatch[1]
    .split("\n")
    .map((line) => line.replace(/^\s*-\s*/, "").trim())
    .filter((tag) => tag.length > 0);
}

const body = content.replace(/^---\n[\s\S]*?\n---\n/, "").trim();
const paragraphs = body.split("\n\n");

// Determine if content is paid
const isPaid = priceCents > 0;
const price = (priceCents / 100).toFixed(2);
---

<Layout>
  <main class="brochure">
    <!-- HERO -->
    <section class="hero">
      <header class="content">
        <a href="/writings" class="back-link">‚Üê Back to Writings</a>
        <h1 class="gradient-pink-yellow">{title}</h1>
        {author && <p class="subtitle author-name">by {author}</p>}
        {date && (
          <time class="subtitle">{new Date(date).toLocaleDateString()}</time>
        )}
        {tags && tags.length > 0 && (
          <div class="tags-header">
            <span class="category-badge">{category}</span>
            {tags.filter(tag => tag.toLowerCase() === 'essay').map((tag) => (
              <span class="tag tag-essay">{tag}</span>
            ))}
            {tags.filter(tag => tag.toLowerCase() !== 'essay').map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
        {isPaid && (
          <p class="subtitle price-tag">
            ${price}
          </p>
        )}
      </header>
    </section>

    <!-- CONTENT -->
    <section class="writing-content-section">
      <div class="content">
        <article class="writing-body">
          {paragraphs.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </article>

        {isPaid && (
          <div class="purchase-section">
            <div class="card">
              <h3 class="card-title gradient-cyan-pink">Support This Work</h3>
              <p class="purchase-desc">
                This writing is available for ${price}. Your support helps maintain our creative independence.
              </p>
              <button class="btn retro">Purchase Access</button>
            </div>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>

