<style>
  .legal-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .updated-date {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-bottom: var(--space-xl);
  }

  .legal-section {
    margin-bottom: var(--space-xl);
  }

  .legal-section h2 {
    font-size: 1.8rem;
    margin-bottom: var(--space-md);
    color: var(--primary-pink);
  }

  .legal-section h3 {
    font-size: 1.3rem;
    margin-top: var(--space-md);
    margin-bottom: var(--space-sm);
    color: var(--starlight);
  }

  .legal-section p {
    margin-bottom: var(--space-sm);
    line-height: 1.7;
  }

  .legal-section ul {
    margin-left: var(--space-md);
    margin-bottom: var(--space-md);
    line-height: 1.8;
  }

  .legal-section li {
    margin-bottom: var(--space-xs);
  }

  .inline-link {
    color: var(--primary-cyan);
    text-decoration: underline;
    transition: color var(--transition-duration) var(--ease-smooth);
  }

  .inline-link:hover {
    color: var(--primary-yellow);
  }

  @media (max-width: 768px) {
    .legal-section h2 {
      font-size: 1.5rem;
    }

    .legal-section h3 {
      font-size: 1.2rem;
    }
  }
</style>
