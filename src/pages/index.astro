---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import mufLogo from '../assets/Musical_Universe_Factory.webp';
---

<Layout>
	<main>
		<Image 
			src={mufLogo} 
			alt="Musical Universe Factory" 
			loading="eager"
			class="logo"
		/>
	</main>
</Layout>

<style>
	main {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		width: 100vw;
		background-color: #000; 
		margin: 0;
		padding: 0;
		overflow: hidden;
	}

	.logo {
		max-width: 90%;
		max-height: 90vh;
		object-fit: contain;
		width: auto;
		height: auto;
	}
</style>